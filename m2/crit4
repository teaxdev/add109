SELECT first_name, LENGTH(first_name) FROM people;

SELECT last_name, SUBSTR(last_name, 3) FROM people;

INSERT INTO people (first_name, last_name, age, favorite_color, gender, hair_color)
VALUES 
('Sophia', 'Chen', 26, '    Teal    ', 'Female', 'Black'),
('Jacob', 'Taylor', 41, '    Maroon', 'Male', 'Brown'),
('Charlotte', 'Wilson', 33, 'Turquoise    ', 'Female', 'Blonde');

SELECT id, TRIM(favorite_color) AS favorite_color FROM people WHERE id = 11;
SELECT id, LTRIM(favorite_color) AS favorite_color FROM people WHERE id = 12;
SELECT id, RTRIM(favorite_color) AS favorite_color FROM people WHERE id = 13;

SELECT * FROM people;

SELECT * FROM people WHERE first_name LIKE 'l%';
SELECT * FROM people WHERE first_name LIKE '_i%';

SELECT FORMAT('%2.2f', AGE) AS AGE_FLOAT FROM people;

SELECT first_name || ' ' || last_name AS full_name FROM people;