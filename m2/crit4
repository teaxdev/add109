DROP TABLE IF EXISTS people;
CREATE TABLE people (
    id INTEGER PRIMARY KEY,
    first_name,
    last_name,
    age INTEGER,
    favorite_color,
    gender,
    hair_color
);

INSERT INTO people (first_name, last_name, age, favorite_color, gender, hair_color)
VALUES 
('Emma', 'Johnson', 28, 'Blue', 'Female', 'Blonde'),
